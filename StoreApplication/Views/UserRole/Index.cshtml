@model IEnumerable<StoreApplication.ViewModels.UserVM>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("View Roles", "Detail", new { userName = item.Email })
            </td>
            <td>
                @Html.ActionLink("Delete User", "DeleteUser", new { email = item.Email })
            </td>
        </tr>
}
    </tbody>
</table>

