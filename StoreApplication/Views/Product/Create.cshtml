@model StoreApplication.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="jumbotron jumbotron-fluid" style="margin:20px 100px;">
    <div class="container">
        <div class="card text-center">
            <div class="card-header">
                Product Form
            </div>
            <div class="card-body">
                <h2 class="card-title">Add New Product</h2>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-controller="Home" asp-action="Index" style="width: 400px; margin: 25px auto;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ProductName" class="control-label"></label>
                                <input asp-for="ProductName" class="form-control" required />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductImage" class="control-label">Upload Image:</label>
                                    <input type="file" asp-for="ProductImage" name="ProductImage" id="ProductImage" class="form-control" required />
                                    <span asp-validation-for="ProductImage" class="text-success"></span>
                                @*<img src="~/images/not-found.jpg" style="max-width:100px;max-height:100px" />*@
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input type="number" asp-for="Price" class="form-control" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-action="SaveDataToSQL" type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-controller="Home" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
